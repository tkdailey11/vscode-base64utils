{
  "name": "vscode-base64utils",
  "displayName": "Base64 Utilities",
  "publisher": "TylerDailey",
  "repository": {
    "type": "git",
    "url": "git://github.com/tkdailey11/vscode-base64utils.git"
  },
  "description": "Adds right click options that allow you to select text, right-click it, and then either base64 encode or decode it.",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.b64encode",
        "title": "Base64 Encode"
      },
      {
        "command": "extension.b64decode",
        "title": "Base64 Decode"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "vscode-base64utils",
          "group": "navigation"
        }
      ],
      "vscode-base64utils": [
        {
          "command": "extension.b64encode",
          "when": "editorHasSelection",
          "group": "vscode-base64utils"
        },
        {
          "command": "extension.b64decode",
          "when": "editorHasSelection",
          "group": "vscode-base64utils"
        }
      ]
    },
    "submenus": [
      {
        "id": "vscode-base64utils",
        "label": "Base64 Utils"
      }
    ],
    "configuration": {
      "title": "Base64 Utilities",
      "properties": {
        "Base64.showInformation": {
          "type": "boolean",
          "default": true,
          "description": "Show encoded/decoded strings as popup information messages."
        },
        "Base64.inPlace": {
          "type": "boolean",
          "default": false,
          "description": "Perform base64 encoding and decoding in place."
        }
      }
    },
    "keybindings": [
      {
        "command": "extension.b64encode",
        "key": "ctrl+k ctrl+e",
        "linux": "ctrl+k ctrl+e",
        "mac": "cmd+k cmd+e",
        "when": "editorHasSelection"
      },
      {
        "command": "extension.b64decode",
        "key": "ctrl+k ctrl+d",
        "linux": "ctrl+k ctrl+d",
        "mac": "cmd+k cmd+d",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
